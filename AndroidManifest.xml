<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crawler.battleship"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StarFighterActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StarFighterMainMenu"
            android:label="@string/title_activity_star_fighter_main_menu" >
        </activity>

        <service
            android:name=".engine.SFMusic"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name=".SFGameActivity"
            android:label="@string/title_activity_sfgame" >
        </activity>
    </application>

</manifest>
